<resources>

  <!-- Base application theme. -->
  <!-- eg: Theme.AppCompat.NoActionBar, Theme.MaterialComponents.Light.NoActionBar, Theme.AppCompat.Light.DarkActionBar -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimaryDarkest</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/greyDim</item>
  </style>

  <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:homeAsUpIndicator">@drawable/ic_launcher_background</item>

    <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
    <item name="android:textColorPrimary">@android:color/holo_blue_light</item>
    <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
    <item name="actionMenuTextColor">@android:color/holo_green_light</item>
    <!-- Tints the input fields like checkboxes and text fields -->
    <item name="colorAccent">#ccc</item>
    <!-- Applies to views in their normal state. -->
    <item name="colorControlNormal">#ccc</item>
    <!-- Applies to views in their activated state (i.e checked or switches) -->
    <item name="colorControlActivated">#ccc</item>
    <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
    <item name="colorControlHighlight">#ccc</item>

    <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
    <!--
    <item name="selectableItemBackground">?android:selectableItemBackground</item>
    <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    -->
  </style>

  <!-- Styles all the things -->
  <style name="tab_layout_primary" parent="Base.Widget.Design.TabLayout">
    <item name="tabIndicatorColor">@color/colorAccent</item>
  </style>

  <!-- pos not working -->
  <style name="datepicker" parent="@style/Theme.AppCompat.DayNight.Dialog">
    <item name="colorPrimary">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorPrimaryDark</item>
    <item name="android:colorBackground">@color/colorPrimaryDark</item>
    <item name="android:windowBackground">@color/colorPrimaryDark</item>
    <item name="android:headerBackground">@color/colorPrimaryDark</item>
    <item name="android:panelColorBackground">@color/colorPrimaryDark</item>
    <item name="android:colorForeground">@color/colorPrimaryDark</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDarkest</item>
    <item name="android:background">@color/colorPrimaryDark</item>
    <item name="android:topBright">@color/colorPrimaryDark</item>
    <item name="android:textColor">@color/redPrimary</item>
  </style>

  <style name="text_sm" parent="@style/Widget.AppCompat.TextView">
    <item name="android:textSize">@dimen/text_sm</item>
  </style>
  <style name="text_xs_inv" parent="@style/Widget.AppCompat.TextView">
    <item name="android:textSize">@dimen/text_xs</item>
    <item name="android:textColor">@color/greyLight</item>
  </style>
  <style name="text_xs_light_inv" parent="@style/text_xs_inv">
    <item name="android:textColor">@color/FF_40</item>
  </style>
  <style name="text_sm_inv" parent="@style/Widget.AppCompat.TextView">
    <item name="android:textSize">@dimen/text_sm</item>
    <item name="android:textColor">@color/greyLight</item>
  </style>
  <style name="text_sm_light_inv" parent="@style/text_sm_inv">
    <item name="android:textColor">@color/FF_40</item>
  </style>
  <style name="text_md_inv" parent="@style/Widget.AppCompat.TextView">
    <item name="android:textSize">@dimen/text_md</item>
    <item name="android:textColor">@color/greyLight</item>
  </style>
  <style name="text_md_light_inv" parent="@style/text_md_inv">
    <item name="android:textColor">@color/FF_40</item>
  </style>


  <style name="form_control" parent="@style/Widget.AppCompat.EditText">
    <item name="android:textSize">@dimen/text_sm</item>
    <item name="android:textColor">@color/greyLight</item>
    <item name="android:textColorHint">@color/greyLight</item>
    <item name="android:textColorHighlight">@color/greyLight</item>
    <item name="android:textColorLink">@color/greyLight</item>
  </style>


  <!-- This configures the styles for the title within the Toolbar  -->
  <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">21sp</item>
    <item name="android:textStyle">italic</item>
  </style>

</resources>
